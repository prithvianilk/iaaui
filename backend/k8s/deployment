apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{image_name}}-deployment
spec:
  replicas: {{replicas}}
  selector:
    matchLabels:
      app: {{image_name}}-app
  template:
    metadata:
      labels:
        app: {{image_name}}-app
    spec:
      containers:
        - name: {{image_name}}-container
          image: {{image_name}}
          ports:
          - containerPort: 80